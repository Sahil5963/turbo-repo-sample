{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "pull-all": "./manage-repos.sh pull",
    "push-all": "./manage-repos.sh push",
    "status-all": "./manage-repos.sh status",
    "commit-all": "./manage-repos.sh commit"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.1.3",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@8.19.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
